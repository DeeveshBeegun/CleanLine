<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cleanline.controller.FunctionalityController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10">
        <StackPane>
            <HBox.hgrow>
                ALWAYS
            </HBox.hgrow>
            <TextArea fx:id="unprocessedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50" prefWidth="200" prefHeight="300" />
            <Button fx:id="chooseFileButton" text="Choose File" onAction="#onChooseFileButtonClick" StackPane.alignment="CENTER" />
        </StackPane>
        <TextArea fx:id="processedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50" prefWidth="200" prefHeight="300">
            <HBox.hgrow>
                ALWAYS
            </HBox.hgrow>
        </TextArea>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <Label text="Clean Text"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="12.0">
        <CheckBox fx:id="duplicates" text="Remove Duplicates">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
        <CheckBox fx:id="emptyLines" text="Remove Empty Lines">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
    </HBox>
    <HBox alignment="CENTER" spacing="12.0">
        <Button text="Clear Input" onAction="#onClearInputButtonClick"/>
        <Button text="Process File!" onAction="#onProcessFileButtonClick"/>
        <Button text="Download Output" onAction="#onDownloadOutputButtonClick"/>
    </HBox>
</VBox>
