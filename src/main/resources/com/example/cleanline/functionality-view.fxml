<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cleanline.controller.FunctionalityController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="unprocessedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50"/>
    <CheckBox fx:id="duplicates" text="Remove Duplicates"/>
    <CheckBox fx:id="emptyLines" text="Remove Empty Lines"/>
    <Button text="Process File!" onAction="#onProcessFileButtonClick"/>
    <TextArea fx:id="processedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50"/>

</VBox>
