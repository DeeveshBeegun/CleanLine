<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cleanline.controller.FunctionalityController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10">
        <StackPane>
            <HBox.hgrow>
                ALWAYS
            </HBox.hgrow>
            <TextArea fx:id="unprocessedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50" prefWidth="500" prefHeight="600" />
            <Button fx:id="chooseFileButton" text="Choose File" onAction="#onChooseFileButtonClick" StackPane.alignment="CENTER" />
        </StackPane>
        <TextArea fx:id="processedFilePreview" editable="false" prefRowCount="20" prefColumnCount="50" prefWidth="500" prefHeight="600">
            <HBox.hgrow>
                ALWAYS
            </HBox.hgrow>
        </TextArea>
    </HBox>
    <HBox alignment="CENTER_LEFT">
        <Label text="Clean Text"/>
    </HBox>
    <HBox alignment="CENTER" spacing="12.0">
        <CheckBox fx:id="duplicatesCheckBox" text="Remove Duplicates">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
        <CheckBox fx:id="emptyLinesCheckBox" text="Remove Empty Lines">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
         <CheckBox fx:id="lineBreaksCheckBox" text="Remove Line breaks">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
         <CheckBox fx:id="uppercaseCheckBox" text="Convert to uppercase">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
         <CheckBox fx:id="lowercaseCheckBox" text="Convert to lowercase">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
        <CheckBox fx:id="whiteSpaceCheckBox" text="Trim white space">
            <HBox.margin>
                <Insets top="4.0" right="4.0" bottom="4.0" left="4.0"/>
            </HBox.margin>
        </CheckBox>
    </HBox>
    <HBox alignment="CENTER" spacing="12.0">
        <Button text="Clear Input" onAction="#onClearInputButtonClick"/>
        <Button text="Process File" onAction="#onProcessFileButtonClick"/>
        <Button fx:id="downloadButton" disable="true" text="Download Output" onAction="#onDownloadOutputButtonClick"/>
        <Button text="Clear Output" onAction="#onClearOutputButtonClick"/>
    </HBox>
</VBox>
